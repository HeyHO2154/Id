{
  "manifest_version": 3,
  "name": "방문 기록 분석기",
  "version": "1.0",
  "description": "방문 기록을 분석하여 사용자의 관심사를 파악합니다",
  "minimum_chrome_version": "114",
  "permissions": [
    "history",
    "storage",
    "sidePanel",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_title": "방문 기록 분석 시작"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 