{
  "manifest_version": 3,
  "name": "이드",
  "version": "1.0",
  "description": "가족보다 날 더 잘 아는 비밀친구",
  "minimum_chrome_version": "114",
  "permissions": [
    "history",
    "storage",
    "sidePanel",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_title": "이드"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 