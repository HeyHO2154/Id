{
  "manifest_version": 3,
  "name": "이드",
  "version": "1.0",
  "description": "나만의 비밀 친구",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_title": "AI 채팅 시작"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 